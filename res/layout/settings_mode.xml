<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:background="@drawable/background_settings"
    android:orientation="horizontal">
	<LinearLayout 
	    android:id = "@+id/dummylayout_7"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1.5"
	    android:orientation="vertical">	   
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/settings_panel"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="5"
	    android:orientation="vertical">
	    <LinearLayout 
	        android:id="@+id/dummy_layout25"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"/>
		<TextView
		    android:id="@+id/high_score_header_settings"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="High Score"
		    android:textColor="#643f00"
		    android:gravity="center_horizontal"
		    android:layout_weight="0.5"
		    android:textSize="30dp" /> 
		<TextView
		    android:id="@+id/high_score_settings"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="0"
		    android:textColor="#643f00"
		    android:gravity="center_horizontal"
		    android:layout_weight="0.7"
		    android:textSize="40sp" />    
		<LinearLayout 
	        android:id="@+id/dummy_layout25"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.2"
	        android:orientation="horizontal"/>
		<LinearLayout 
		    android:id = "@+id/buttons_panel"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="5"
		    android:orientation="horizontal">
		    <RelativeLayout 
		        android:id="@+id/music_button_div"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent">"
				<ImageButton 
				    android:id= "@+id/music_button"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_horizontal"
				    android:src="@drawable/music_on_image"/>
				<TextView 
				    android:id="@+id/music_button_desc"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/music_button"
				    android:text="Audio"
				    android:textSize="20sp"
				    android:layout_centerHorizontal="true"
				    android:textColor="#643f00"/>"
			</RelativeLayout>
			<RelativeLayout
			    android:id="@+id/rules_button_div"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent">
				<ImageButton 
				    android:id= "@+id/rules_button"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_horizontal"
				    android:src="@drawable/rules_image"/>
				<TextView 
				    android:id="@+id/rules_button_desc"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/rules_button"
				    android:text="Rules"
				    android:textSize="20sp"
				    android:layout_centerHorizontal="true"
				    android:textColor="#643f00"/>
			</RelativeLayout>
			<RelativeLayout
			    android:id="@+id/info_button_div"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent">
				<ImageButton 
				    android:id= "@+id/info_button"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_horizontal"
				    android:src="@drawable/info_image"/>
				<TextView 
				    android:id="@+id/info_button_desc"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/info_button"
				    android:text="Info"
				    android:textSize="20sp"
				    android:layout_centerHorizontal="true"
				    android:textColor="#643f00"/>
			</RelativeLayout>
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/dummylayout_11"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1.2"
		    android:orientation="horizontal"/>"
	</LinearLayout>
	<LinearLayout 
	    android:id ="@+id/dummylayout_8"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1.5"
	    android:orientation="vertical">	    
	</LinearLayout>
</LinearLayout>

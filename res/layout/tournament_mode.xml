<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_versus_mode"
    android:orientation="horizontal">
    <RelativeLayout 
        android:id="@+id/user_one_button_panel"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1">
        <ImageButton 
		        android:id="@+id/user1_touch_button_tournament_mode"
		        android:src="@drawable/player_one_button"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentTop="true"/>
        
        <ImageButton 
		        android:id="@+id/user2_touch_button_tournament_mode"
		        android:src="@drawable/player_two_button"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentBottom="true"/>    
	    
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/image_and_score_panel"
        android:orientation="vertical">
        <RelativeLayout 
            android:id="@+id/score_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <TextView 
                android:id="@+id/user1_score_tournament_mode"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="30sp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
            <TextView 
                android:id="@+id/user4_score_tournament_mode"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="0"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView
			    android:id="@+id/image_question_tournament_mode"
			    android:layout_width="225dp"
			    android:layout_height="175dp"
			    android:layout_weight="3.75"
			    android:src="@drawable/get_ready"
			    android:layout_gravity="center_horizontal"/>
        <RelativeLayout
	            android:id="@+id/dummyLayout_3"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="3">
                <TextView 
	                android:id="@+id/user2_score_tournament_mode"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:text="0"
	                android:textSize="30sp"
	                android:textColor="#000"
	                android:layout_centerVertical="true"
	                android:layout_alignParentLeft="true"/>
            	<TextView 
	                android:id="@+id/user3_score_tournament_mode"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:text="0"
	                android:textColor="#000"
	                android:textSize="30sp"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"/>
	    </RelativeLayout>
    </LinearLayout>
    
	<RelativeLayout 
	    android:id="@+id/user_two_button_panel"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1">
	    <ImageButton 
		        android:id="@+id/user4_touch_button_tournament_mode"
		        android:src="@drawable/player_four_button"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentTop="true"/>
	    
	    <ImageButton 
		        android:id="@+id/user3_touch_button_tournament_mode"
		        android:src="@drawable/player_three_button"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentBottom="true"/>
	    
	</RelativeLayout>
</LinearLayout>
